<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <com.wiseme.lvscabin.uimodule.customview.loading.LoadingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.wiseme.lvscabin.uimodule.customview.PathMeasureCircleOne
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.wiseme.lvscabin.uimodule.customview.PathMeasureCircleTwo
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.wiseme.lvscabin.uimodule.customview.PathEffectView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</LinearLayout>